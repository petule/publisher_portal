<div class="card">
  <header class="card-header">
    <p class="card-header-title">
      <span class="icon"><i class="mdi mdi-book-open-variant-outline"></i></span>
      <%= t('views.ebooks.form_header.series') %>
    </p>
  </header>
  <div class="card-content">
    <div class="field">
      <%= f.label :series, class: "label" %>
      <div class="control">
        <%= f.select :series_id, SeriesDecorator.select_options,
                     { include_blank: true },
                     class: "input", data: { controller: "slim-select" },
                     placeholder: t('activerecord.attributes.ebook.series_id') %>
      </div>
    </div>
    <div class="field">
      <%= f.label :part, class: "label" %>
      <div class="control">
        <%= f.number_field :part, class: "input", step: 1, min: 1 %>
      </div>
    </div>
  </div>
</div>
