<div class="card">
  <header class="card-header">
    <p class="card-header-title">
      <span class="icon"><i class="mdi mdi-book-open-variant-outline"></i></span>
      <%= t('views.ebooks.form_header.others') %>
    </p>
  </header>
  <div class="card-content">
    <div class="field">
      <%= f.label :language_id, class: "label" %>
      <div class="control">
        <%= f.select :language_id, options_for_select(LanguageDecorator.select_options, @ebook.language_id), {},
                     class: "input", data: { controller: "slim-select" },
                     placeholder: t('activerecord.attributes.ebook.language_id') %>
      </div>
    </div>
    <div class="field">
      <%= f.label :publication_year, class: "label" %>
      <div class="control">
        <%= f.select :publication_year,
                     options_for_select((1900..Date.current.year).to_a.reverse, @ebook.publication_year),
                     {},
                     class: "input" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :publication_place, class: "label" %>
      <div class="control">
        <%= f.text_field :publication_place, class: "input" %>
      </div>
    </div>
    <div class="field">
      <%= f.label :page_count, class: "label" %>
      <div class="control">
        <%= f.number_field :page_count, class: "input", step:1, min: 1 %>
      </div>
    </div>
  </div>
</div>
