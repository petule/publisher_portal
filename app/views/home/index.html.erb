
<%= render 'layouts/header/navbar' %>
<%= render 'layouts/aside/nav' %>
<section class="is-hero-bar">
  <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
    <h1 class="title">
      <%= t('views.home.dashboard') %>
    </h1>
    <button class="button light">Button</button>
  </div>
</section>

<section class="section main-section">
  <div class="grid gap-6 grid-cols-1 md:grid-cols-3 mb-6">
    <div class="card">
      <div class="card-content">
        <div class="flex items-center justify-between">
          <div class="widget-label">
            <h3>
              Clients
            </h3>
            <h1>
              512
            </h1>
          </div>
          <span class="icon widget-icon text-green-500"><i class="mdi mdi-account-multiple mdi-48px"></i></span>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-content">
        <div class="flex items-center justify-between">
          <div class="widget-label">
            <h3>
              Sales
            </h3>
            <h1>
              $7,770
            </h1>
          </div>
          <span class="icon widget-icon text-blue-500"><i class="mdi mdi-cart-outline mdi-48px"></i></span>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-content">
        <div class="flex items-center justify-between">
          <div class="widget-label">
            <h3>
              <%= t('views.home.performance') %>
            </h3>
            <h1>
              256%
            </h1>
          </div>
          <span class="icon widget-icon text-red-500"><i class="mdi mdi-finance mdi-48px"></i></span>
        </div>
      </div>
    </div>
  </div>

  <div class="card mb-6" data-controller="chart">
    <header class="card-header">
      <p class="card-header-title">
        <span class="icon"><i class="mdi mdi-finance"></i></span>
        <%= t('views.home.performance') %>
      </p>
      <a href="#" class="card-header-icon" data-action="chart#refresh">
        <span class="icon"><i class="mdi mdi-reload"></i></span>
      </a>
    </header>
    <div class="card-content">
      <div class="chart-area">
        <div class="h-full">
          <canvas data-chart-target="canvas" class="block w-full h-96"></canvas>
        </div>
      </div>
    </div>
  </div>

  <%= render 'ebooks/index' %>
</section>

<%= render 'layouts/footer' %>

