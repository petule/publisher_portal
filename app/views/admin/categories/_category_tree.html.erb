<ul data-controller="sortable" data-id="<%= categories.first.category_id || '' %>" class="w-full sortable-container">
  <% categories.each do |category| %>
    <li data-id="<%= category.id %>" class="flex flex-col w-full">

      <!-- hlavn칤 콏치dek -->
      <div class="flex items-center justify-between px-4 py-2 border-b border-gray-200 w-full">

        <!-- lev치 캜치st: drag + toggle + popis -->
        <div class="flex items-center space-x-2 flex-1 min-w-0">
          <!-- drag handle -->
          <div class="drag-handle cursor-move text-gray-500 hover:text-gray-700">
            <i class="mdi mdi-drag text-lg"></i>
          </div>

          <!-- toggle button pokud m치 podkategorie -->
          <% if category.categories.any? %>
            <button class="button small p-1" data-action="click->toggle#toggle">
              <i data-toggle-target="icon" class="mdi mdi-minus text-gray-600 text-lg"></i>
            </button>
          <% else %>
            <span class="w-4"></span>
          <% end %>

          <span class="text-sm text-gray-600 truncate"><%= category.name %></span>
          <span class="text-xs text-gray-500 whitespace-nowrap">
            (<%= pluralize_ebooks(category.ebooks.count) %>)
          </span>

          <% if category.active? %>
            <span class="text-xs text-green-600 whitespace-nowrap">游릭 <%= t('dials.active_true') %></span>
          <% else %>
            <span class="text-xs text-red-600 whitespace-nowrap">游댮 <%= t('dials.active_false') %></span>
          <% end %>
        </div>

        <!-- prav치 캜치st: akce -->
        <div class="flex items-center space-x-2 flex-shrink-0 pl-4">
          <%= link_to edit_admin_category_path(category),
                      class: "button small green",
                      title: t('views.admin.categories.edit_button'),
                      data: { turbo_frame: dom_id(category), turbo_stream: 'update' } do %>
            <span class="icon"><i class="mdi mdi-pencil"></i></span>
          <% end %>

          <% unless category.ebooks.any? %>
            <%= button_tag type: 'button',
                           class: 'button small red',
                           data: {
                             controller: "modal",
                             action: "click->modal#open",
                             target: "modal-destroy",
                             destroy_url: admin_category_path(category),
                             question_text: t('views.admin.categories.destroy_modal.text', name: category.name)
                           } do %>
              <span class="icon"><i class="mdi mdi-trash-can"></i></span>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- podkategorie -->
      <% if category.categories.any? %>
        <div data-toggle-target="content" class="pl-6 max-h-[1000px] opacity-100 transition-all duration-300 ease-in-out w-full">
          <%= render partial: 'category_tree', locals: { categories: category.categories } %>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>
