<% if @errors.present? %>
  <%= turbo_stream.update 'category_errors', partial: 'admin/categories/errors', locals: { errors: @errors } %>
<% else %>
  <%= turbo_stream.update "category_notice", partial: 'shared/notice', locals: { notice: t('views.admin.categories.create_success') } %>
  <%= turbo_stream.prepend "category_notice" do %>
    <div data-controller="auto-fade-out" ></div>
  <% end %>
  <%= turbo_stream.prepend "sortable-#{@category.category_id}" do %>
    <%= render partial: 'admin/categories/category_item', locals: { category: @category } %>
  <% end %>
<% end %>
