<h1><%= t('devise.sessions.title') %></h1>
<section class="section main-section">
  <div class="card">
    <header class="card-header">
      <p class="card-header-title">
        <span class="icon"><i class="mdi mdi-lock"></i></span>
        <%= t('devise.passwords.subtitle') %>
      </p>
    </header>
    <div class="card-content">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :password, t('devise.passwords.new_password'), class: "label required" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <div class="control">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, t('devise.passwords.new_password_confirmation'), class: "label required" %><br />
          <div class="control">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit t('devise.passwords.change_password_submit'), class: 'button green' %>
        </div>
      <% end %>

    </div>
  </div>
</section>
<%= render "devise/shared/links" %>
