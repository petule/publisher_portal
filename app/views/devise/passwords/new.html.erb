
<h1><%= t('devise.passwords.title') %></h1>
<section class="section main-section">
  <div class="card">
    <header class="card-header">
      <p class="card-header-title">
        <span class="icon"><i class="mdi mdi-lock"></i></span>
        <%= t('devise.passwords.subtitle') %>
      </p>
    </header>
    <div class="card-content">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field spaced">
          <%= f.label :email, class: 'label' %>
          <div class="control icons-left">
            <%= f.email_field :email, autofocus: true, autocomplete: "user@example.com", class: 'input' %>
            <span class="icon is-small left"><i class="mdi mdi-account"></i></span>
          </div>
          <p class="help"><%= t('devise.sessions.help.email') %></p>
        </div>

        <hr>
        <div class="field grouped">
          <div class="control">
            <%= f.submit t('devise.passwords.button_send_instruction'), class: 'button blue' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
<%= render "devise/shared/links" %>
