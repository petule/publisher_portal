<%= render 'layouts/header/navbar' %>
<%= render 'layouts/aside/nav' %>
<section class="is-hero-bar">
  <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
    <h1 class="title"><%= t('views.users.profile_title') %></h1>
  </div>
</section>
<section class="section main-section">
  <div class="grid grid-cols-1 gap-6 lg:grid-cols-2 mb-6">
    <div class="card">
      <header class="card-header">
        <p class="card-header-title">
          <span class="icon"><i class="mdi mdi-account-circle"></i></span>
          <%= t('views.users.edit_title') %>
        </p>
      </header>
      <div class="card-content">
        <%= turbo_frame_tag 'profile' do %>
          <%= render 'form' %>
        <% end %>
      </div>
    </div>
    <div class="card">
      <header class="card-header">
        <p class="card-header-title">
          <span class="icon"><i class="mdi mdi-lock"></i></span>
          <%= t('views.users.password.title') %>
        </p>
      </header>
      <div class="card-content">
        <%= turbo_frame_tag 'password' do %>
          <%= render 'password_form' %>
        <% end %>
      </div>
    </div>
  </div>
</section>
